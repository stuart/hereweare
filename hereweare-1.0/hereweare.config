# Config for Home Assistant presence detection daemon.

# This is the url to the home assistant api services endpoint. 
home_assistant_url="http://homeassistant.local/api/services/"

# Replace 'TOKEN' with a long term token that you get from your
# Home Assistant Profile -> Long-Lived Access Tokens.
home_assistant_token="Authorization: Bearer TOKEN"

# This is the id of the entity you wish to interact with. 
# I chose to use a boolean input. 
home_assistant_entity_id="input_boolean.at_keyboard"

# This is the service to call when activity is detected.
home_assistant_active_path="input_boolean/turn_on"

# This is the service to call when inactivity is detected.
home_assistant_inactive_path="input_boolean/turn_off"

# The number of seconds the scan for mouse or keyboard activity 
# runs for.
scan_time=60

# The time to wait to do another scan when the state is 'active' in seconds.
active_wait_time=600

# The time time wait to do another scan when the state is 'inactive' in seconds.
# You probably want this to be shorter than the active_wait_time.
inactive_wait_time=10
